@{
    ViewData["Title"] = "Página Login";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Personal Dynamic RH & DP</a> <!--Nome do cabeçalho-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Página inicial</a> <!--Referente a página de inicio-->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cadastro" asp-action="NovoCadastro">Novo Cadastro</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="text-center">
    <h1 class="display-4">Bem vindo</h1>
    <h2 class="display-4">Consulte suas informações de forma <br> rápida e simples</h2>
</div>

<form class="px-4 py-3"> <!--form-group-->
    
    <div class="form-group">
        <label for="exEmail">Email</label>
        <input type="email" class="form-control" id="exEmail" aria-describedby="emailHelp" placeholder="Informe seu email">
        <small id="emailHelp" class="form-text text-muted">Nunca compartilhe seus dados com ninguém.</small>
    </div>
    <br>

    <div class="form-group">
        <label for="exemploSenha">Senha</label>
        <input type="password" class="form-control" id="exemploSenha" placeholder="Informe sua senha">
    </div>
    <br>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="lembrar">
        <label class="form-check-label" for="lembrar">Lembrar de mim</label>
    </div>
    
    <br>

    <!--Botão com action de acesso as paginas do sistema 
        Definir um contoller "AcessoUsuarioController.cs"
        Definir uma view, asp-action="AcessoPrincipal.cshtml" onde vai ter a primeira pág quando acessa sistemas
    -->
    <button type="submit" class="btn btn-primary" asp-controller="AcessoUsuario" asp-action="Inicio">Entrar</button>
</form>


